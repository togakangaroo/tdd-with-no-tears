{
    "env": {
        "mocha": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:mocha/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "mocha"
    ],
    "rules": {
        "mocha/no-hooks-for-single-case": "off",
        "mocha/no-setup-in-describe": "off",
        "mocha/no-mocha-arrows": "off"
    }
}
